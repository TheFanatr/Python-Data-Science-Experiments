{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "new",
                "showReuseMessage": false,
                "clear": true
            },
            "options": {
                "shell": {
                    "executable": "powershell.exe",
                    "args": [
                        "-Command"
                    ]
                }
            },
            "promptOnClose": true,
            "command": "python",
            "args": [
                "script.py"
            ],
            "problemMatcher": []
        }
    ]
}